<h6 class="heading">{{name}}'s Dashboard</h6>
<br />
{{#if exercises}}
<table class="striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Duration</th>
    </tr>
  </thead>
  <tbody>
    {{#each exercises}}
    <tr>
      <td><a href="/exercises/{{_id}}">{{name}}</a></td>
      <td>{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</td>
      <td>{{duration}} minutes</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>You have not completed any exercises</p>
{{/if}}